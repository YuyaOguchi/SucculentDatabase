<div class="jumbo show-listing">
  <h2 class="title">{{model.title}}</h2>
  <div class="right detail-section">
    <div class="detail rarity">
      <strong>Rarity:</strong> {{model.rarity}}
    </div>
    <div class="detail">
      <strong>Type:</strong> {{succulent-type model.category}} - {{model.category}}
    </div>
    <div class="detail">
      <strong>Area:</strong> {{model.area}}
    </div>
    <div class="detail">
      <strong>Light:</strong> {{model.light}}
    </div>
    <p class="description">{{model.description}}</p>
  </div>
  <img src="{{model.image}}" class="rental-pic">
</div>

